    <div class="game-container">
        <div class="game-card" onclick="startGame('animals')">
            <h2>转 </h2>
            <img src="https://cdn-icons-png.flaticon.com/512/616/616408.png" class="animal-image" alt="转">
        </div>

        <div class="game-card" onclick="startGame('colors')">
            <h2>爪注 </h2>
            <img src="https://cdn-icons-png.flaticon.com/512/1067/1067555.png" class="animal-image" alt="爪注">
        </div>
    </div>

    <script>
        function startGame(category) {
            const words = {
                animals: {
                    '': '',
                    '': '转',
                    '': '专'
                },
                colors: {
                    '': '',
                    '': '专拽',
                    '': ''
                }
            };

            const selectedWords = words[category];
            const emoji = prompt(`  ${Object.keys(selectedWords)[0]}?`);
            
            if (emoji && selectedWords[emoji]) {
                alert(` ! 转砖 : ${selectedWords[emoji]}`);
            } else {
                alert('住 砖! ');
            }
        }
    </script>
